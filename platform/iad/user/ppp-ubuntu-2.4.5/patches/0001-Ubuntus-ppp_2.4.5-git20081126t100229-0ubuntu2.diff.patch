+	echo $(DIFF_EXCLUDE)
+
+make-diff:
+	mv $(BUILD_TREE) bak
+	$(MAKE) -f debian/sys-build.mk source.clean
+	$(MAKE) -f debian/sys-build.mk source.make
+	mv $(BUILD_TREE) $(BUILD_TREE).orig
+	mv bak $(BUILD_TREE)
+
